<%- model.hardware_io_port_status %>
  #
  # END USER CODE
  #

  changeState = 0
  # Generated code to perform needed state transitions:
<%
if (model.State_list) {
  model.State_list.map(function(state) {
-%>
<%- state.irqFunc %>
<%
  });
}
-%>
end
