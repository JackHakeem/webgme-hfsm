echo off
if defined VS140COMNTOOLS (
    set "COMNTOOLS=%VS140COMNTOOLS%"
) else if defined VS120COMNTOOLS (
    set "COMNTOOLS=%VS120COMNTOOLS%"
) else if defined VS110COMNTOOLS (    
    set "COMNTOOLS=%VS110COMNTOOLS%"
) else if defined VS100COMNTOOLS (
    set "COMNTOOLS=%VS100COMNTOOLS%"
) else (
    echo "Visual studio was not found"
)
if defined COMNTOOLS (
    REM add visual studio environment variables
    echo "%COMNTOOLS%"
    call "%COMNTOOLS%..\..\VC\vcvarsall.bat" x86
    
    REM compile
    csc Program.cs
    REM execute
    Program.exe
)